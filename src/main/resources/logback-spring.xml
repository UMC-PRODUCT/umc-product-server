<configuration>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{traceId}] [%thread] %logger{40} : %msg%n
            </pattern>
        </encoder>

        <file>${LOG_DIR}/${LOG_NAME}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${LOG_NAME}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>

            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender class="ch.qos.logback.core.ConsoleAppender" name="APP_CONSOLE">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%-4.4X{traceId}] [%thread] %logger{40} : %msg%n
            </pattern>
        </encoder>
    </appender>

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!--    <include resource="org/springframework/boot/logging/logback/base.xml"/>-->

    <property name="LOG_DIR" value="./logs"/>

    <property name="LOG_NAME" value="umc-product"/>

    <root level="INFO">
        <appender-ref ref="APP_CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
